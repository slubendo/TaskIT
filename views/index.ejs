                                                                <div class="widget-content-left">
                                                                    <div class="widget-heading">
                                                                        <%= task.type %>
                                                                    </div>
                                                                    <div class="widget-subheading dateValue">
                                                                        <%= (task.due).toString().slice(0,10) %>
                                                                    </div>
                                                                    <div class="widget-subheading priorityValue" hidden>
                                                                        <%= task.priority_id %>
                                                                    </div>
                                                                </div>
                                                                <a href="/completeTask?id=<%= task.task_id %>">
                                                                    <button
                                                                        class="border-0 btn-transition btn btn-outline-success">
                                                                        <i class="fa fa-check"></i></button>
                                                                </a>
                                                                <a href="/deleteTask?id=<%= task.task_id %>">
                                                                    <button
                                                                        class="border-0 btn-transition btn btn-outline-danger">
                                                                        <i class="fa fa-trash"></i>
                                                                    </button>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>

